{
  "openapi": "3.0.0",
  "info": {
    "title": "Claude Code Configuration API",
    "description": "离线配置管理 API 合同",
    "version": "1.0.0",
    "contact": {
      "name": "Claude Code Config Team"
    }
  },
  "paths": {
    "/configurations": {
      "get": {
        "summary": "获取所有配置",
        "description": "返回系统中所有的配置文件列表",
        "tags": ["Configuration"],
        "responses": {
          "200": {
            "description": "成功返回配置列表",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "configurations": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Configuration"
                      }
                    },
                    "totalCount": {
                      "type": "integer",
                      "description": "配置总数"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "创建新配置",
        "description": "创建一个新的 Claude Code CLI 配置",
        "tags": ["Configuration"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ConfigurationCreateRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "配置创建成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Configuration"
                }
              }
            }
          },
          "400": {
            "description": "请求参数无效",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/configurations/{id}": {
      "get": {
        "summary": "获取指定配置",
        "description": "根据 ID 获取特定的配置信息",
        "tags": ["Configuration"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "成功返回配置信息",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Configuration"
                }
              }
            }
          },
          "404": {
            "description": "配置不存在",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "更新配置",
        "description": "更新指定 ID 的配置信息",
        "tags": ["Configuration"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ConfigurationUpdateRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "配置更新成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Configuration"
                }
              }
            }
          },
          "400": {
            "description": "请求参数无效",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "配置不存在",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "删除配置",
        "description": "删除指定 ID 的配置",
        "tags": ["Configuration"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "配置删除成功"
          },
          "404": {
            "description": "配置不存在",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/configurations/{id}/validate": {
      "post": {
        "summary": "验证配置",
        "description": "验证指定配置的有效性",
        "tags": ["Configuration"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "验证完成",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationResult"
                }
              }
            }
          }
        }
      }
    },
    "/configurations/{id}/launch": {
      "post": {
        "summary": "启动配置",
        "description": "使用指定配置启动 iTerm2 和 Claude Code CLI",
        "tags": ["Configuration"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "启动成功"
          },
          "400": {
            "description": "配置无效或启动失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/configurations/import": {
      "post": {
        "summary": "导入配置",
        "description": "从 JSON 文件导入配置",
        "tags": ["Configuration"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ConfigurationImportRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "导入成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "importedCount": {
                      "type": "integer",
                      "description": "成功导入的配置数量"
                    },
                    "skippedCount": {
                      "type": "integer",
                      "description": "跳过的配置数量"
                    },
                    "errors": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Error"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/configurations/export": {
      "post": {
        "summary": "导出配置",
        "description": "将指定配置导出为 JSON 文件",
        "tags": ["Configuration"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ConfigurationExportRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "导出成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ConfigurationExportResponse"
                }
              }
            }
          }
        }
      }
    },
    "/resources/help/{topic}": {
      "get": {
        "summary": "获取帮助内容",
        "description": "获取指定主题的帮助文档内容",
        "tags": ["Resources"],
        "parameters": [
          {
            "name": "topic",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "成功返回帮助内容",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HelpContent"
                }
              }
            }
          },
          "404": {
            "description": "帮助主题不存在",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/resources/help": {
      "get": {
        "summary": "获取所有帮助主题",
        "description": "返回所有可用的帮助主题列表",
        "tags": ["Resources"],
        "responses": {
          "200": {
            "description": "成功返回帮助主题列表",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "topics": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/HelpTopic"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/resources/errors/{code}": {
      "get": {
        "summary": "获取错误信息",
        "description": "根据错误代码获取详细的错误信息和解决建议",
        "tags": ["Resources"],
        "parameters": [
          {
            "name": "code",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "成功返回错误信息",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorMessage"
                }
              }
            }
          },
          "404": {
            "description": "错误代码不存在",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Configuration": {
        "type": "object",
        "required": ["id", "name", "baseURL", "workingDirectory", "isDefault", "createdAt", "updatedAt"],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "配置唯一标识符"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50,
            "description": "配置名称"
          },
          "baseURL": {
            "type": "string",
            "format": "uri",
            "description": "API 基础 URL"
          },
          "workingDirectory": {
            "type": "string",
            "description": "工作目录路径"
          },
          "isDefault": {
            "type": "boolean",
            "description": "是否为默认配置"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "创建时间"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "最后更新时间"
          },
          "validationState": {
            "type": "integer",
            "enum": [0, 1, 2],
            "description": "验证状态：0=未验证，1=有效，2=无效"
          },
          "lastValidationDate": {
            "type": "string",
            "format": "date-time",
            "description": "最后验证时间"
          }
        }
      },
      "ConfigurationCreateRequest": {
        "type": "object",
        "required": ["name", "baseURL", "workingDirectory"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50,
            "description": "配置名称"
          },
          "baseURL": {
            "type": "string",
            "format": "uri",
            "description": "API 基础 URL"
          },
          "workingDirectory": {
            "type": "string",
            "description": "工作目录路径"
          },
          "isDefault": {
            "type": "boolean",
            "default": false,
            "description": "是否设为默认配置"
          }
        }
      },
      "ConfigurationUpdateRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50,
            "description": "配置名称"
          },
          "baseURL": {
            "type": "string",
            "format": "uri",
            "description": "API 基础 URL"
          },
          "workingDirectory": {
            "type": "string",
            "description": "工作目录路径"
          },
          "isDefault": {
            "type": "boolean",
            "description": "是否设为默认配置"
          }
        }
      },
      "ValidationResult": {
        "type": "object",
        "required": ["isValid", "errors", "warnings"],
        "properties": {
          "isValid": {
            "type": "boolean",
            "description": "是否验证通过"
          },
          "errors": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "description": "致命错误列表"
          },
          "warnings": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "description": "警告列表"
          }
        }
      },
      "ValidationError": {
        "type": "object",
        "required": ["code", "message", "severity", "type"],
        "properties": {
          "code": {
            "type": "string",
            "description": "错误代码"
          },
          "message": {
            "type": "string",
            "description": "错误消息"
          },
          "suggestion": {
            "type": "string",
            "description": "解决建议"
          },
          "severity": {
            "type": "string",
            "enum": ["FATAL", "WARNING", "INFO"],
            "description": "严重程度"
          },
          "type": {
            "type": "string",
            "enum": ["CONFIG", "SYSTEM", "USER"],
            "description": "错误类型"
          }
        }
      },
      "Error": {
        "type": "object",
        "required": ["code", "message"],
        "properties": {
          "code": {
            "type": "string",
            "description": "错误代码"
          },
          "message": {
            "type": "string",
            "description": "错误消息"
          },
          "details": {
            "type": "object",
            "description": "错误详细信息"
          }
        }
      },
      "ConfigurationImportRequest": {
        "type": "object",
        "required": ["format", "data"],
        "properties": {
          "format": {
            "type": "string",
            "enum": ["json"],
            "description": "导入格式"
          },
          "data": {
            "type": "string",
            "description": "导入的配置数据（Base64 编码）"
          },
          "replaceExisting": {
            "type": "boolean",
            "default": false,
            "description": "是否替换现有配置"
          }
        }
      },
      "ConfigurationExportRequest": {
        "type": "object",
        "properties": {
          "configurationIds": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uuid"
            },
            "description": "要导出的配置 ID 列表，为空则导出所有配置"
          },
          "format": {
            "type": "string",
            "enum": ["json"],
            "default": "json",
            "description": "导出格式"
          },
          "includeSensitiveData": {
            "type": "boolean",
            "default": false,
            "description": "是否包含敏感数据"
          }
        }
      },
      "ConfigurationExportResponse": {
        "type": "object",
        "required": ["data", "format"],
        "properties": {
          "data": {
            "type": "string",
            "description": "导出的配置数据（Base64 编码）"
          },
          "format": {
            "type": "string",
            "description": "导出格式"
          },
          "exportedCount": {
            "type": "integer",
            "description": "导出的配置数量"
          }
        }
      },
      "HelpContent": {
        "type": "object",
        "required": ["topic", "title", "content"],
        "properties": {
          "topic": {
            "type": "string",
            "description": "帮助主题键值"
          },
          "title": {
            "type": "string",
            "description": "帮助标题"
          },
          "content": {
            "type": "string",
            "description": "帮助内容（Markdown 格式）"
          },
          "category": {
            "type": "string",
            "enum": ["basic", "advanced", "troubleshooting"],
            "description": "帮助分类"
          },
          "lastUpdated": {
            "type": "string",
            "format": "date-time",
            "description": "最后更新时间"
          }
        }
      },
      "HelpTopic": {
        "type": "object",
        "required": ["key", "title", "category"],
        "properties": {
          "key": {
            "type": "string",
            "description": "主题键值"
          },
          "title": {
            "type": "string",
            "description": "主题标题"
          },
          "category": {
            "type": "string",
            "enum": ["basic", "advanced", "troubleshooting"],
            "description": "主题分类"
          },
          "description": {
            "type": "string",
            "description": "主题描述"
          }
        }
      },
      "ErrorMessage": {
        "type": "object",
        "required": ["code", "message", "severity", "type"],
        "properties": {
          "code": {
            "type": "string",
            "description": "错误代码"
          },
          "message": {
            "type": "string",
            "description": "错误消息"
          },
          "suggestion": {
            "type": "string",
            "description": "解决建议"
          },
          "severity": {
            "type": "string",
            "enum": ["FATAL", "WARNING", "INFO"],
            "description": "严重程度"
          },
          "type": {
            "type": "string",
            "enum": ["CONFIG", "SYSTEM", "USER"],
            "description": "错误类型"
          }
        }
      }
    },
    "tags": [
      {
        "name": "Configuration",
        "description": "配置管理相关操作"
      },
      {
        "name": "Resources",
        "description": "资源管理相关操作"
      }
    ]
  }
}